<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Fleur+De+Leah&display=swap" rel="stylesheet" />
    <link rel="stylesheet" href="./css/estilosingresarLibro.css" />
    <link rel="stylesheet" href="./css/estilos.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
        crossorigin="anonymous"></script>
    <script type="text/javascript" src="./JS/ingresar_libro.js">
    </script>
</head>

<div class="body">
    <%- include('templates/header') %>

        <!-- INICIO DE CONTENIDO -->

        <div class="container">
            <!-- Stack the columns on mobile by making one full-width and the other half-width -->

            <div class="row mb-5 mt-5">
                <div class="col-sm-8">
                    <label for="">
                        <strong class="display-6"> <em>Ingresa la información del libro</em></strong>
                    </label>
                    <div class="btn-group  mt-5">
                        <button type="button" class="btn btn-secondary dropdown-toggle" data-bs-toggle="dropdown"
                            data-bs-display="static" aria-expanded="false" id="botprin" style="color:rgb(0, 0, 0)">
                            Tipo de transacción
                        </button>
                        <ul class="dropdown-menu dropdown-menu-lg-end">
                            <% tipo_transaccion.forEach((trans)=> { %>
                                <li>
                                    <a class="dropdown-item" href="#">
                                        <%= trans.Descripcion %>
                                    </a>
                                </li>
                                <% }); %>
                        </ul>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-sm-5">
                    <form>
                        <div class="form-group mb-5">
                            <label class="form-control-label">Título</label>
                            <input type="text" class="form-control w-100" />
                        </div>
                    </form>

                    <form>
                        <div class="form-group mb-5">
                            <label class="form-control-label">Autor</label>
                            <input type="text" class="form-control w-100" />
                        </div>
                    </form>

                    <div class="row">
                        <div class="col-sm-10">
                            <form>
                                <div class="form-group mb-5">
                                    <label class="form-control-label">Precio</label>
                                    <input type="texto" class="form-control w-100" />
                                </div>
                            </form>
                        </div>
                        <div class="col-sm-2">
                            <!-- Example single danger button -->
                            <div class="btn-group border-2 border-bottom border-dark">
                                <button type="button" class="btn dropdown-toggle mt-4 p-soles" data-bs-toggle="dropdown"
                                    aria-expanded="false">
                                    Divisa
                                </button>
                                <ul class="dropdown-menu">
                                    <li><a class="dropdown-item" href="#">USD</a></li>
                                    <li><a class="dropdown-item" href="#">EUR</a></li>
                                    <li><a class="dropdown-item" href="#">PEN</a></li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-sm-3">
                </div>

                <div class="col-sm-4">
                    <form>
                        <div class="form-group mb-3">
                            <label class="form-control-label">Foto</label>
                            <br>
                            <input type="file">
                        </div>
                    </form>
                    <form>
                        <div class="form-group mb-3">
                            <label class="form-control-label">Categoria</label>
                            <div class="dropdown">
                                <button id="botoncate" class="btn btn-secondary dropdown-toggle" type="button"
                                    id="dropdownMenuButton1" data-bs-toggle="dropdown" aria-expanded="false"
                                    style="color:rgb(0, 0, 0)">
                                    Categoría
                                </button>
                                <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
                                    <% categorias.forEach((cat)=> { %>
                                        <li>
                                            <a class="dropdown-item" href="#">
                                                <%= cat.Descripcion %>
                                            </a>
                                        </li>
                                        <% }); %>
                                </ul>
                            </div>
                        </div>
                    </form>
                    <form>
                        <div class="form-group mb-3">
                            <label class="form-control-label ">Estado</label>
                            <div class="menudrop2">
                                <div class="dropdown">
                                    <button class="btn btn-secondary dropdown-toggle" type="button"
                                        id="dropdownMenuButton1" data-bs-toggle="dropdown" aria-expanded="false"
                                        style="color:rgb(0, 0, 0)">
                                        Estado
                                    </button>
                                    <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
                                        <% estados.forEach((cat)=> { %>
                                            <li>
                                                <a class="dropdown-item" href="#">
                                                    <%= cat.Descripcion %>
                                                </a>
                                            </li>
                                            <% }); %>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </form>
                    <form>
                        <div class="form-group">
                            <label class="form-control-label">Imperfectos</label>
                        </div>
                        <div class="form-group">
                            <textarea class="w-100" name="imperfectos" id="imp" cols="40" rows="4"></textarea>
                        </div>
                    </form>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-12">
                    <form>
                        <div class="form-group">
                            <label class="form-control-label">Descripción</label>
                        </div>
                        <div class="form-group">
                            <textarea class="w-100" name="imperfectos" id="imp" cols="157" rows="4"></textarea>
                        </div>
                    </form>
                </div>
            </div>

            <div class="row">
                <div class="col-sm-9"> 
                </div>

                <div class="col-sm-3">
                    <button id="botoncomfirmar" type="button" class="btn btn-light w-100" style="color:rgb(0, 0, 0)">
                        <strong>
                            Añadir a mi Tienda
                        </strong>
                    </button>
                </div>
            </div>

        </div>

        <br>
</div>
<!-- FIN DE CONTENIDO -->

<%- include('templates/footer') %>




</html>