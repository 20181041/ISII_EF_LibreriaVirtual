<div class="body">
    <%- include('templates/header-IS') %>
        <!-- INICIO DE CONTENIDO -->
        <!-- FORMULARIO DE REGISTRO           -->
        <form id="boton" method="POST" action="/AnadirNumero">
            <div class="container">
                <div class="row">
                    <div class="col-sm-6 card-header mt-5 mb-5 Carta ">
                        <div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel">
                            <div class="carousel-inner">
                              <div class="carousel-item active">
                                <img src="./Images/LibrosRegistro.jpg" class="d-block w-100 ImgRegistro"  >
                              </div>
                              <div class="carousel-item">
                                <img src="./Images/LibrosRegistro2.jpg" class="d-block w-100 ImgRegistro" >
                              </div>
                              <div class="carousel-item">
                                <img src="./Images/LibrosRegistro3.jpg" class="d-block w-100 ImgRegistro" >
                              </div>
                            </div>
                            <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
