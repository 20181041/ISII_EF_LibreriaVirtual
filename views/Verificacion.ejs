                        </div>

                        </form>
                        <div id="BotonRegistrar" class="form-floating" >
                            <button  type="submit" id="boton" class="btn btn-primary" >
                                Confirmar 
                            </button>
                        </div >
            
                </div>
            </div>

        
        <!-- FIN DE CONTENIDO -->       
</div>

