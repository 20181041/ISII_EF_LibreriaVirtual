<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Fleur+De+Leah&display=swap" rel="stylesheet" />
    <link rel="stylesheet" href="./css/estilosingresarLibro.css" />
    <link rel="stylesheet" href="./css/estilos.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
        crossorigin="anonymous"></script>
    <script type="text/javascript" src="./JS/ingresar_libro.js">
    </script>
</head>

<div class="body mb-3">
    <%- include('templates/header') %>
        <!-- INICIO DE CONTENIDO -->
        <div class="container">
            <!-- Stack the columns on mobile by making one full-width and the other half-width -->
            <form method="post" action="/actualizoLibro/1/12">
                <div class="row mb-5 mt-5">
                    <div class="col-sm-8">
                        <label for="">
                            <strong class="display-6"> <em>Actualiza la información del libro</em></strong>
                        </label>
                        <div class="btn-group w-50 mb-3 mt-3">
                            <select class="form-control" name="Tipo_Transaccion">
                                <% tipo_transaccion.forEach((trans)=> { %>
                                    <option value="<%= trans.Descripcion %>">
                                        <%= trans.Descripcion %>
                                    </option>
                                    <% }); %>
                            </select>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-5">
                        <% libro.forEach((mascot)=> { %>
                            <% if (mascot.ID_Libro==1) { %>
                                <div class="form-group mb-5">
                                    <label class="form-control-label">Título</label>
                                    <input type="text" class="form-control w-100 text-dark"
                                        value="<%= mascot.Nombre %>" />
                                </div>
                                <div class="form-group mb-5">
                                    <label class="form-control-label">Autor</label>
                                    <input type="text" class="form-control w-100 text-dark"
                                        value="<%= mascot.Autor %>" />
                                </div>
                                <% }; %>
                                    <% }); %>
                    </div>
                    <div class="col-sm-2">
                    </div>
                    <div class="col-sm-5">
                        <div class="form-group mb-5">
                            <label class="form-control-label">Foto</label>
                            <div class="menudrop2">
                                <button id="botonfoto" type="button" class="btn btn-light"
                                    style="color:rgb(0, 0, 0)"><u>Examinar</u></button>
                            </div>
                        </div>
                        <div class="form-group mb-3">
                            <label class="form-control-label">Categoria</label>
                            <select class="form-control mt-3" name="categoria">
                                <% categorias.forEach((cat)=> { %>
                                    <option value="<%= cat.Descripcion %>">
                                        <%= cat.Descripcion %>
                                    </option>
                                    <% }); %>
                            </select>
                        </div>
                        <div class="form-group mb-3">
                            <label class="form-control-label ">Estado</label>
                            <select class="form-control mt-3" name="estado">
                                <% estados.forEach((cat)=> { %>
                                    <option value=" <%= cat.Descripcion %>">
                                        <%= cat.Descripcion %>
                                    </option>
                                    <% }); %>
                            </select>
                        </div>
                        <div class="form-group">
                            <label class="form-control-label">Imperfectos</label>
                        </div>
                        <div class="form-group">
                            <% libro.forEach((mascot)=> { %>
                                <% if (mascot.ID_Libro==1) { %>
                                    <textarea class="w-100" name="imperfectos" id="imp" cols="40"
                                        rows="4"><%= mascot.Imperfectos %></textarea>
                                    <% }; %>
                                        <% }); %>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-12">
                        <div class="form-group">
                            <label class="form-control-label">Descripción</label>
                        </div>
                        <div class="form-group">
                            <% libro.forEach((mascot)=> { %>
                                <% if (mascot.ID_Libro==1) { %>
                                    <textarea class="w-100" name="descripcion" id="imp" cols="157"
                                        rows="4"><%= mascot.Imperfectos %></textarea>
                                    <% }; %>
                                        <% }); %>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-sm-3">
                    </div>
                    <div class="col-sm-3">
                    </div>
                    <div class="col-sm-3">
                    </div>

                    <div class="col-sm-3">
                        <button id="botoncomfirmar" type="button" class="btn btn-light w-100"
                            style="color:rgb(0, 0, 0)">
                            <strong>
                                Añadir a mi Tienda
                            </strong>
                        </button>
                    </div>
                </div>
            </form>
        </div>
</div>
<!-- FIN DE CONTENIDO -->
<%- include('templates/footer') %>

</html>