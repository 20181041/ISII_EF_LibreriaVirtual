        <div class="row">
            <div class="col-sm-3">

            </div>
            <div class="col-sm-2">
                <a href="#" class="btn btn-primary text-center w-100 mt-3 mb-3">Atras</a>
            </div>
            <div class="col-sm-2">
                
            </div>
            <div class="col-sm-2">
                <form  method="POST" id="Confirmacion" action="/Confirmar">
                    <input type="hidden" name= "libro" value="<%=libro%>">
                    <input type="hidden" name= "peticion" value="<%=peticion%>">
                    <input type="hidden" name= "dueno" value="<%=dueno%>">
                    <% if(botonOfertante) { %>
                        <button id="AceptoOfertante" class="btn btn-primary text-center w-100 mt-3 mb-3"> Aceptar </button>
                    <%}%>  

                    <% if(botonRecibe) { %>
                        <button id="AceptoRecibe" class="btn btn-success text-center w-100 mt-3 mb-3"> Aceptar </button>
                    <%}%>  
   
                </form>
                
            </div>
            

        </div>
        <form method="POST" id="formContinuar" action="/ZonaComunicacion">
            <% if(botonContinuar) { %>
                <input type="hidden" name= "libro" value="<%=libro%>">
                <input type="hidden" name= "peticion" value="<%=peticion%>">
                <input type="hidden" name= "dueno" value="<%=dueno%>">
                <button type="submit" id="Continuar" class="btn btn-primary text-center w-100 mt-3 mb-3">Continuar</button>
            <%}%>  

            <% if(!botonContinuar) { %>
                <p class="text-center font-12">El boton continuar se activará cuando ambos acepten la transacción </p>
            <%}%>  

        </form>
       
       
